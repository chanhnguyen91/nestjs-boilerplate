{
  "name": "nestjs-boilerplate-final",
  "version": "1.0.0",
  "description": "A complete NestJS backend boilerplate with final adjustments",
  "scripts": {
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=local nest start --watch",
    "start:prod": "node dist/main",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"test/**/*.{ts,js}\"",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "cross-env NODE_ENV=local typeorm migration:generate -d src/config/database.config.ts",
    "migration:run:local": "cross-env NODE_ENV=local typeorm migration:run -d src/config/database.config.ts",
    "migration:run:dev": "cross-env NODE_ENV=dev typeorm migration:run -d src/config/database.config.ts",
    "migration:run:staging": "cross-env NODE_ENV=staging typeorm migration:run -d src/config/database.config.ts",
    "migration:run:prod": "cross-env NODE_ENV=prod typeorm migration:run -d src/config/database.config.ts",
    "seed:local": "cross-env NODE_ENV=local ts-node --project tsconfig.json src/scripts/seed.ts",
    "seed:dev": "cross-env NODE_ENV=dev ts-node --project tsconfig.json src/scripts/seed.ts",
    "seed:staging": "cross-env NODE_ENV=staging ts-node --project tsconfig.json src/scripts/seed.ts",
    "docker:build": "docker build -t nestjs-boilerplate-final .",
    "docker:up:local": "cross-env NODE_ENV=local docker-compose -f docker-compose.local.yml up --build -d",
    "docker:up:dev": "cross-env NODE_ENV=dev docker-compose -f docker-compose.dev.yml up --build -d",
    "docker:up:staging": "docker-compose -f docker-compose.staging.yml up --build -d",
    "docker:up:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose -f docker-compose.local.yml down && docker-compose -f docker-compose.dev.yml down && docker-compose -f docker-compose.staging.yml down && docker-compose -f docker-compose.prod.yml down"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.0.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "bcrypt": "^5.1.0",
    "cache-manager": "^5.0.0",
    "cache-manager-redis-store": "^3.0.0",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mysql2": "^3.0.0",
    "nestjs-i18n": "^10.5.1",
    "nestjs-zod": "^4.3.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "redis": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.0",
    "typeorm-transactional": "^0.5.0",
    "winston": "^3.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@types/passport-google-oauth20": "^2.0.0",
    "@types/passport-jwt": "^3.0.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
